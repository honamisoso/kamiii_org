<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">


<h2>会員情報</h2>
<% if current_user.profile_image.present? %>
<p><%= image_tag current_user.profile_image %></p>
<% end %>
<p>name：<%= current_user.name %></p>
<p>髪質・毛量・長さ: <%= current_user.introduction %></p>

<%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<% end %>


<h4>レビュー📝</h4>
<!-- form_with部分 -->
<%= form_with model:@book, method: :post do |f| %>

  <h4>商品</h4>
  <%= f.text_field :title %>

  <h4>使用感</h4>
  <%= f.text_area :body %>

  <div><%= f.submit '投稿！' %></div>
<% end %>
 </div>

<div class="col-md-8 offset-md-1">
<h2>投稿者一覧👯</h2>

<div>
  <table class="table table-hover table-inverse">
   <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      </tr>
   </thead>
   <tbody>

    <% @users.each do |user| %>

    <tr>
    <th><%= image_tag user.get_profile_image(100, 100) %></th>
    <th><%= user.name %></th>
    <th><%= link_to "この人のレビューを見る👀", user_path(user.id) %></th>
    </tr>
  </div>
<% end %>

 </tbody>
 </table>
   </div>
   </div>
 </div>
